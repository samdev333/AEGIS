# AEGIS MCP Server Environment Variables
# Copy this file to .env and update values

# =============================================================================
# REQUIRED: API Authentication
# =============================================================================

# Bearer token for API authentication (all tool endpoints)
# Generate a secure token: python -c "import secrets; print('aegis_mcp_' + secrets.token_hex(24))"
# WARNING: Never commit real tokens to version control!
MCP_BEARER_TOKEN=your_bearer_token_here

# =============================================================================
# REQUIRED: Agent Authorization (Smart ID Badge)
# =============================================================================

# Execution Agent ID - ONLY this agent can execute runbooks and access secrets
# Get this from watsonx Orchestrate: Agent Settings > Agent ID
AEGIS_EXECUTION_AGENT_ID=your_execution_agent_uuid_here

# Triage Agent ID (optional) - can run diagnostics alongside Execution Agent
# Leave empty if not using a separate triage agent
AEGIS_TRIAGE_AGENT_ID=

# =============================================================================
# OPTIONAL: HashiCorp Vault Integration
# =============================================================================

# Vault server address (e.g., https://vault.example.com:8200)
VAULT_ADDR=

# Vault token for authentication
VAULT_TOKEN=

# Vault namespace (optional, for enterprise Vault / HCP Vault)
VAULT_NAMESPACE=

# KV secrets engine mount path (default: secret)
VAULT_KV_MOUNT=secret

# Path to the AEGIS MCP secret within the KV mount (default: aegis/mcp)
VAULT_SECRET_PATH=aegis/mcp

# =============================================================================
# OPTIONAL: Application Settings
# =============================================================================

# Execution token returned by get_secret("execution_token")
AEGIS_EXEC_TOKEN=your_execution_token_here

# Port (default: 8080, Code Engine sets this automatically)
PORT=8080
